<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignBounds"
        android:columnCount="2"
        android:useDefaultMargins="true" >

        <TextView
            android:layout_gravity="start|top"
            android:text="Type" />

        <TextView
            android:id="@+id/plugin_detail_type"
            android:layout_gravity="start|top"
            android:text="title" />

        <TextView
            android:layout_gravity="start|top"
            android:text="Description" />

        <TextView
            android:id="@+id/plugin_detail_description"
            android:layout_gravity="start|top"
            android:text="description" />

        <TextView
            android:layout_gravity="start|top"
            android:text="Package" />

        <TextView
            android:id="@+id/plugin_detail_component_name"
            android:layout_gravity="start|top"
            android:text="componentName" />

        <TextView
            android:id="@+id/plugin_detail_auth_value_label"
            android:layout_gravity="start|top"
            android:text="AuthValue" />

        <TextView
            android:id="@+id/plugin_detail_auth_value"
            android:layout_gravity="start|top"
            android:text="authValue" />

        <TextView
            android:layout_gravity="start|top"
            android:text="Last Update" />

        <TextView
            android:id="@+id/plugin_detail_last_update"
            android:layout_gravity="start|top"
            android:text="UNKNOWN" />

        <TextView
            android:layout_gravity="start|top"
            android:text="Status" />

        <TextView
            android:id="@+id/plugin_detail_status"
            android:layout_gravity="start|top"
            android:text="status" />

    </GridLayout>
    <Button
        android:id="@+id/plugin_detail_request_authentication"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:text="Request explicit authentication" />

    <Button
        android:id="@+id/plugin_detail_show_configuration"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:text="Settings" />
</LinearLayout>