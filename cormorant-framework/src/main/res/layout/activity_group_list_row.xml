<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/activity_group_list_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="4dp"
        android:layout_weight="0"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_devices_other_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_group_list_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_group_list_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device Model"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_group_list_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance GPS"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/activity_group_list_text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance Bluetooth"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/activity_group_list_text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discrete Result"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/activity_group_list_text6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="16sp" />
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0"
         />

    <ImageView
        android:id="@+id/activity_group_list_remove_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="4dp"
        android:layout_weight="0"
        android:layout_gravity="center"
        android:onClick="removeDeviceAction"

        app:srcCompat="@drawable/ic_clear_black_24dp" />

    <ImageView
        android:id="@+id/activity_group_list_lock_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="4dp"
        android:layout_weight="0"
        android:layout_gravity="center"
        android:onClick="lockOrUnlockDevice"

        app:srcCompat="@drawable/ic_lock_black_24dp" />
</LinearLayout>
